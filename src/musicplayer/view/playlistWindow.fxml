<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane id="anchorpane"  prefHeight="288.0" prefWidth="293.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="musicplayer.controller.PlaylistWindowController">
   <children>
      <Label layoutX="21.0" layoutY="38.0" styleClass="labelColor" stylesheets="@../css/darkAndGloomy.css" text="Playlist name:" />
      <TextField fx:id="txtPlaylistName" layoutX="116.0" layoutY="34.0" prefHeight="27.0" prefWidth="153.0" styleClass="textField"  />
      <RadioButton fx:id="rdPrivate" layoutX="20.0" layoutY="113.0" mnemonicParsing="false" selected="true" styleClass="textField"  text="Private">
         <toggleGroup>
            <ToggleGroup fx:id="privacyLevel" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rdContact" layoutX="20.0" layoutY="142.0" mnemonicParsing="false" styleClass="textField"  text="Contact" toggleGroup="$privacyLevel" />
      <RadioButton fx:id="rdPublic" layoutX="20.0" layoutY="170.0" mnemonicParsing="false" styleClass="textField"  text="Public" toggleGroup="$privacyLevel" />
      <Label layoutX="21.0" layoutY="84.0" styleClass="labelColor" stylesheets="@../css/darkAndGloomy.css" text="Privacy level:" />
      <Label layoutX="93.0" layoutY="113.0" styleClass="labelColor" stylesheets="@../css/darkAndGloomy.css" text="Visible only to you" />
      <Label layoutX="93.0" layoutY="142.0" styleClass="labelColor" stylesheets="@../css/darkAndGloomy.css" text="Visible to you and your contacts" />
      <Label layoutX="93.0" layoutY="170.0" styleClass="labelColor" stylesheets="@../css/darkAndGloomy.css" text="Visible to everyone" />
      <Button fx:id="btnCreatePlaylist" layoutX="118.0" layoutY="253.0" mnemonicParsing="false" onAction="#onBtnCreatePlaylistPressed" stylesheets="@../css/darkAndGloomy.css" text="Done!">
         <styleClass>
            <String fx:value="buttonColor" />
            <String fx:value="labelColor" />
         </styleClass></Button>
      <Label layoutX="14.0" layoutY="196.0" prefHeight="57.0" prefWidth="265.0" styleClass="labelColor"  text="Right-click on a track's name on the player to add it to your new playlist." textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1f93ff00" height="45.0" layoutX="9.0" layoutY="203.0" stroke="#8a8888" strokeType="INSIDE" width="277.0" />
   </children>
</AnchorPane>
